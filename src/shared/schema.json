{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "EDMO Pipeline Data Schema",
  "definitions": {
    "utterance": {
      "type": "object",
      "properties": {
        "id": {"type": "string"},
        "speaker_id": {"type": "string"},
        "start_time": {"type": "number"},
        "end_time": {"type": "number"},
        "text": {"type": "string"},
        "embedding": {"type": "array", "items": {"type": "number"}},
        "emotion": {"type": "object"},
        "prosody": {
          "type": "object",
          "properties": {
            "pitch_mean": {"type": "number"},
            "pitch_std": {"type": "number"},
            "energy_mean": {"type": "number"},
            "speaking_rate": {"type": "number"}
          }
        }
      },
      "required": ["id", "speaker_id", "start_time", "end_time", "text"]
    },
    "time_window": {
      "type": "object",
      "properties": {
        "window_id": {"type": "string"},
        "start_time": {"type": "number"},
        "end_time": {"type": "number"},
        "utterances": {"type": "array", "items": {"$ref": "#/definitions/utterance"}},
        "aggregated_features": {"type": "object"},
        "robot_data": {"$ref": "#/definitions/robot_window"}
      }
    },
    "robot_window": {
      "type": "object",
      "properties": {
        "avg_distance_to_target": {"type": "number"},
        "total_distance_moved": {"type": "number"},
        "action_count": {"type": "integer"},
        "action_distribution": {"type": "object"},
        "avg_action_strength": {"type": "number"}
      }
    }
  }
}
